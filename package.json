{
	"name": "manifold-lsp-workspace",
	"version": "1.0.0",
	"private": true,
	"description": "Monorepo workspace for the Manifold language server and editor integrations.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jwrunge/manifold-lsp"
	},
	"keywords": [
		"manifold",
		"language-server",
		"lsp"
	],
	"workspaces": [
		"client"
	],
	"scripts": {
		"postinstall": "pnpm --dir client install",
		"compile": "pnpm --dir client run compile",
		"sync-readmes": "python3 scripts/generate_readmes.py",
		"sync-icons": "node scripts/generate_icons.mjs",
		"check-types": "pnpm --dir client exec tsc --noEmit",
		"watch": "pnpm --dir client run watch",
		"package": "pnpm --dir client run package"
	},
	"devDependencies": {
		"@vscode/vsce": "^3.2.1",
		"sharp": "^0.34.4"
	},
	"packageManager": "pnpm@8.15.7"
}
