{
	"name": "manifold-language-server",
	"description": "Language server for Manifold HTML framework",
	"license": "MIT",
	"version": "1.5.0",
	"categories": [],
	"keywords": [
		"language-server",
		"tower-lsp",
		"manifold",
		"html",
		"reactive"
	],
	"repository": {
		"url": "https://github.com/IWANABETHATGUY/tower-lsp-boilerplate"
	},
	"engines": {
		"vscode": "^1.85.0"
	},
	"enabledApiProposals": [],
	"activationEvents": [
		"onLanguage:html",
		"onStartupFinished"
	],
	"main": "./client/out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "manifoldLanguageServer.toggleTypeHints",
				"title": "Manifold: Toggle Type Annotations"
			},
			{
				"command": "manifoldLanguageServer.toggleCompletionAutoTrigger",
				"title": "Manifold: Toggle Auto Suggestions"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Manifold Language Server",
			"properties": {
				"manifoldLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"manifoldLanguageServer.documentSelectors": {
					"scope": "resource",
					"type": "array",
					"description": "Document selectors (scheme + VS Code language IDs) that should activate the Manifold language server.",
					"default": [
						{
							"scheme": "file",
							"language": "html"
						},
						{
							"scheme": "file",
							"language": "javascript"
						},
						{
							"scheme": "file",
							"language": "typescript"
						}
					],
					"items": {
						"type": "object",
						"required": [
							"language"
						],
						"properties": {
							"scheme": {
								"type": "string",
								"description": "The URI scheme to match (defaults to 'file')."
							},
							"language": {
								"type": "string",
								"description": "VS Code language identifier that should be handled by Manifold."
							}
						}
					}
				},
				"manifoldLanguageServer.typeHints.enabled": {
					"scope": "window",
					"type": "boolean",
					"default": true,
					"description": "Show inline type annotations for Manifold expressions exposed by the language server."
				},
				"manifoldLanguageServer.completions.autoTrigger": {
					"scope": "window",
					"type": "boolean",
					"default": true,
					"description": "Automatically request Manifold-aware completions when typing '.', '${', or attribute quotes."
				}
			}
		}
	},
	"scripts": {
		"postinstall": "cd client && pnpm i",
		"compile": "pnpm --dir client run compile",
		"check-types": "pnpm --dir client exec tsc --noEmit --project tsconfig.json",
		"watch": "pnpm --dir client run watch",
		"package": "vsce package --no-dependencies"
	},
	"devDependencies": {
		"@types/glob": "8.1.0",
		"@types/mocha": "10.0.10",
		"@types/node": "22.10.2",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"@vscode/vsce": "^3.2.1",
		"cross-env": "^7.0.2",
		"esbuild": "^0.24.2",
		"eslint": "9.17.0",
		"glob": "11.0.0",
		"mocha": "11.0.2",
		"npm-run-all": "^4.1.5",
		"ts-loader": "^9.5.1",
		"typescript": "5.4.5",
		"vscode-test": "^1.4.0",
		"vscode-uri": "^3.0.2"
	},
	"dependencies": {
		"vscode-languageclient": "9.0.1"
	},
	"packageManager": "pnpm@8.15.7"
}
