{
	"name": "manifold-language-client",
	"description": "VSCode client for Manifold Language Server",
	"license": "MIT",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.85.0"
	},
	"main": "./out/extension.js",
	"activationEvents": [
		"onLanguage:html"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Manifold Language Server",
			"properties": {
				"manifoldLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"vscode-languageclient": "9.0.1"
	},
	"devDependencies": {
		"@types/node": "^17.0.18",
		"vscode-test": "^1.3.0",
		"@types/vscode": "1.85.0",
		"typescript": "^4.9.4"
	}
}
