{
	"name": "manifold-language-client",
	"description": "VSCode client for Manifold Language Server",
	"license": "MIT",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.85.0"
	},
	"main": "./out/extension.js",
	"activationEvents": [
		"onLanguage:html",
		"onStartupFinished"
	],
	"contributes": {
		"commands": [
			{
				"command": "manifoldLanguageServer.restart",
				"title": "Manifold: Restart Language Server"
			},
			{
				"command": "manifoldLanguageServer.showStateTree",
				"title": "Manifold: Show Parsed State Tree"
			}
		],
		"snippets": [
			{
				"language": "html",
				"path": "./snippets/manifold.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Manifold Language Server",
			"properties": {
				"manifoldLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"manifoldLanguageServer.documentSelectors": {
					"scope": "resource",
					"type": "array",
					"description": "Document selectors (scheme + VS Code language IDs) that should activate the Manifold language server.",
					"default": [
						{
							"scheme": "file",
							"language": "html"
						},
						{
							"scheme": "file",
							"language": "manifold"
						},
						{
							"scheme": "file",
							"language": "manifold-html"
						},
						{
							"scheme": "untitled",
							"language": "html"
						}
					],
					"items": {
						"type": "object",
						"required": [
							"language"
						],
						"properties": {
							"scheme": {
								"type": "string",
								"description": "The URI scheme to match (defaults to 'file')."
							},
							"language": {
								"type": "string",
								"description": "VS Code language identifier that should be handled by Manifold."
							}
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"vscode-languageclient": "9.0.1"
	},
	"devDependencies": {
		"@types/node": "^17.0.18",
		"vscode-test": "^1.3.0",
		"@types/vscode": "1.85.0",
		"typescript": "^4.9.4"
	}
}
